<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="xyz.yurihentai.映射.用户映射">

    <resultMap id="用户加用户信息" type="用户">
        <id column="主键" property="主键"/>
        <result column="昵称" property="昵称"/>
        <result column="账号" property="账号"/>
        <result column="密码" property="密码"/>
        <result column="创建时间" property="创建时间"/>
        <result column="修改时间" property="修改时间"/>
        <!-- 使用查询结果进行查询，将查询结果作为指定属性的值 -->
        <association column="主键" property="用户信息" select="xyz.yurihentai.映射.用户信息映射.查找" fetchType="eager"/>
    </resultMap>

    <resultMap id="用户级联用户信息" type="用户">
        <id column="主键" property="主键"/>
        <result column="昵称" property="昵称"/>
        <result column="账号" property="账号"/>
        <result column="密码" property="密码"/>
        <result column="创建时间" property="创建时间"/>
        <result column="修改时间" property="修改时间"/>
        <!-- 类：用户信息 -->
        <result column="i.主键" property="用户信息.主键"/>
        <result column="i.姓名" property="用户信息.姓名"/>
        <result column="i.性别" property="用户信息.性别"/>
        <result column="i.年龄" property="用户信息.年龄"/>
        <result column="i.生日" property="用户信息.生日"/>
        <result column="i.身份证号" property="用户信息.身份证号"/>
    </resultMap>

    <select id="级联查找" resultMap="用户级联用户信息">
        SELECT u.主键, u.昵称, u.账号, u.密码, u.创建时间, u.修改时间,
                i.主键, i.姓名, i.性别, i.年龄, i.生日, i.身份证号
        FROM 用户表 AS u
        LEFT JOIN 用户信息表 AS i
        ON u.主键 = i.主键
        WHERE u.主键 = #{主键}
              AND u.是否删除 = 0
              AND i.是否删除 = 0
    </select>

    <select id="查找" resultMap="用户加用户信息">
        SELECT 主键, 昵称, 账号, 密码, 创建时间, 修改时间
        FROM 用户表
        WHERE 主键 = #{主键} AND 是否删除 = 0
    </select>

    <!--
        useGeneratedKeys：是否启用自动生成主主键(必须数据库支持，入mysql、sqlServer)
        keyProperty：数据库中制定了自动生成主主键的字段
    -->
    <insert id="新增" parameterType="用户" useGeneratedKeys="true" keyProperty="主键" databaseId="mysql">
            INSERT (主键, 昵称, 账号, 密码, 创建时间, 修改时间)
            INTO 用户表
            VALUES (#{主键}, #{昵称}, #{账号}, #{密码}, #{创建时间}, #{创建时间});
        </insert>

